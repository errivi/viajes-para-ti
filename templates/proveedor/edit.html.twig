{% extends 'base.html.twig' %}

{% block title %}Editar Proveedor{% endblock %}

{% block body %}
<div style="margin: 20px; max-width: 600px;">
    <h1>Editar Proveedor: {{ proveedor.nombre }}</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        
        <button type="submit" style="background: orange; color: white; padding: 10px; margin-top: 10px;">
            Actualizar Cambios
        </button>
    {{ form_end(form) }}

    <br>
    <a href="{{ path('app_proveedores') }}">Cancelar</a>
</div>
{% endblock %}