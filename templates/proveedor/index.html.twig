{% extends 'base.html.twig' %}

{% block title %}Listado de Proveedores{% endblock %}

{% block body %}
<div style="margin: 20px;">
    <h1>Mis Proveedores</h1>
    
    <a href="{{ path('app_proveedor_new') }}" style="background: green; color: white; padding: 10px; text-decoration: none;">+ Nuevo Proveedor</a>
    <br><br>

    <table border="1" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background-color: #f0f0f0;">
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Tipo</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {# Aquí empieza la magia de Twig: un bucle FOR #}
            {% for proveedor in proveedores %}
                <tr>
                    <td>{{ proveedor.nombre }}</td>
                    <td>{{ proveedor.email }}</td>
                    <td>{{ proveedor.telefono }}</td>
                    <td>{{ proveedor.tipo }}</td>
                    <td>
                        {% if proveedor.activo %}
                            <span style="color: green;">Sí</span>
                        {% else %}
                            <span style="color: red;">No</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}" style="color: blue;">Editar</a>
                        |                   
                        
                        <form method="post" action="{{ path('app_proveedor_delete', {'id': proveedor.id}) }}" style="display: inline-block; margin-left: 5px;" onsubmit="return confirm('¿Seguro que quieres borrar este proveedor?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proveedor.id) }}">
                            <button type="submit" style="color: red; background: none; border: none; cursor: pointer; text-decoration: underline;">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" style="text-align: center;">No hay proveedores registrados aún.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}