{% extends 'base.html.twig' %}

{% block title %}Listado de Proveedores{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-primary"><i class="bi bi-people-fill"></i> Gestión de Proveedores</h1>
    <a href="{{ path('app_proveedor_new') }}" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-lg"></i> Nuevo Proveedor
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive"> <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Nombre</th>
                        <th>Contacto</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Última Act.</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for proveedor in proveedores %}
                    <tr>
                        <td class="ps-4 fw-bold text-dark">{{ proveedor.nombre }}</td>
                        <td>
                            <div class="small text-muted"><i class="bi bi-envelope"></i> {{ proveedor.email }}</div>
                            <div class="small text-muted"><i class="bi bi-telephone"></i> {{ proveedor.telefono }}</div>
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">{{ proveedor.tipo }}</span>
                        </td>
                        <td>
                            {% if proveedor.activo %}
                                <span class="badge rounded-pill bg-success">Activo</span>
                            {% else %}
                                <span class="badge rounded-pill bg-secondary">Inactivo</span>
                            {% endif %}
                        </td>
                        <td class="small text-muted">
                            {{ proveedor.fechaActualizacion|date('d/m/Y H:i') }}
                        </td>
                        <td class="text-end pe-4">
                            <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            
                            <form method="post" action="{{ path('app_proveedor_delete', {'id': proveedor.id}) }}" class="d-inline-block" onsubmit="return confirm('¿Seguro que quieres eliminar a {{ proveedor.nombre }}?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proveedor.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            No hay proveedores registrados todavía.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}